play = 'yes'



def game():
    print('Welcome to the magic 8 ball where you will have an experience like never before')
    time.sleep(2)
    input('Ask me a question and I will give you the answer to your future: ')
    time.sleep(3)
    answer = random.choice([a, b, c, d, e, f, g, h, i, j, k, l, m, n, o, p, q, r, s, t, u])
    print(answer)


while play == 'yes':
        game()
        play = input('Do you want to give me another shake yes or no? ')
    
